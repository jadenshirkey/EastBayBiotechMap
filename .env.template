# East Bay Biotech Map Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Google Maps API Configuration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# SEC EDGAR API Configuration
# Format: YourAppName/1.0 (your.email@domain.com)
SEC_EDGAR_USER_AGENT=EastBayBiotechMap/1.0 (your.email@example.com)

# Database Configuration
BIOTECH_DB_PATH=data/bayarea_biotech_sources.db

# API Rate Limiting (seconds between requests)
GOOGLE_MAPS_RATE_LIMIT=0.1
SEC_EDGAR_RATE_LIMIT=0.1
CLINICAL_TRIALS_RATE_LIMIT=0.5

# Retry Configuration
API_MAX_RETRIES=3
API_RETRY_DELAY=1.0

# Security Settings
ENABLE_SSL_VERIFY=true